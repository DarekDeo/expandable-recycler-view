<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="96dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/parent_bg">

    <TextView
        android:id="@+id/list_item_parent_horizontal_number_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/list_item_parent_horizontal_parent_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/list_item_parent_horizontal_number_textView"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/list_item_parent_horizontal_arrow_imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/down_arrow_selector" />


</RelativeLayout>